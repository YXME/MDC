<!DOCTYPE html>
<html>
  <head>
    <% if @selRef.sousTitre then %>
      <title><%= @selRef.sousTitre %> - MangaDigitalCollection</title>
    <% else %>
      <title><%= @selRef.titre %> - MangaDigitalCollection</title>
    <% end %>
    <%= favicon_link_tag asset_path('favicon-logo.png') %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "references" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
