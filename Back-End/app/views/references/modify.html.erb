<%= stylesheet_link_tag "addmodifyback" %>
<%= image_tag "Logos/MDC2.png", width: "50%" %>
<h1>Modifier une référence</h1>

<%= form_with(model: @selRef, url: "apply", method: "patch", local: true) do |f| %>
<div class="form">
    <div class="form_field">
        <%= label_tag "Titre" %>
        <%= f.text_field :titre, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Titre court" %>
        <%= f.text_field :sousTitre, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Titre original" %>
        <%= f.text_field :orgTitre, class: "input" %>
    </div>

    <div class="">
      <%= label_tag "Synopsis" %>
      <%= f.text_area(:synopsis, size: "80x8", class: "input") %>
    </div>

    <div class="">
        <%= label_tag "Image d'illustration" %>
        <%= f.file_field :cover_data %>
    </div>

    <div class="">
        <%= label_tag "Cette licence possède t'elle un manga ?" %>
        <%= f.check_box(:isManga) %>
    </div>

    <div class="">
        <%= label_tag "Statut de parution" %>
        <%= f.select :parStatus, options_for_select([['Terminée', 'Terminée'], ["En cours de parution","En cours de parution"], ["A venir","A venir"]], @selRef.parStatus) %>
    </div>

    <div class="">
        <%= label_tag "Nombre de tomes (Japon)" %>
        <%= f.text_field :nbVolJp, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Ce manga est-il/a t'il été édité en France ?" %>
        <%= f.check_box(:isFr) %>
    </div>

    <div class="">
        <%= label_tag "Nombre de tomes (France)" %>
        <%= f.text_field :nbVolFr, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Edition (France)" %>
        <%= f.select :edition_id, options_from_collection_for_select(Editeur.all, :id, :nom, @selRef.edition_id), include_blank: "Aucun" %>
        <%= link_to "Ajouter un éditeur", "/editeurs/new", target: :_blank %>
    </div>

    <div class="">
        <%= label_tag "Cette licence a-t'elle été adaptée en animé ?" %>
        <%= f.check_box(:isAnime) %>
    </div>

    <div class="">
        <%= label_tag "Statut de diffusion" %>
        <%= f.select :difStatus, options_for_select([['Terminée', 'Terminée'], ["En cours de parution","En cours de parution"], ["A venir","A venir"]], @selRef.difStatus) %>
    </div>

    <div class="">
        <%= label_tag "Nombre d'épisodes (Toutes saisons comprises)" %>
        <%= f.text_field :nbEpTotal, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Nombre d'OAVs (Toutes saisons comprises)" %>
        <%= f.text_field :nbOAVTotal, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Nombre de films (Toutes saisons comprises)" %>
        <%= f.text_field :nbFilmsTotal, class: "input" %>
    </div>

    <div class="">
        <%= label_tag "Studio d'animation" %>
        <%= f.select :studio_id, options_from_collection_for_select(Studio.all, :id, :nom, @selRef.studio_id), include_blank: "Aucun" %>
        <%= link_to "Ajouter un studio", "/studios/new", target: :_blank %>
    </div>

    <div class="">
        <%= label_tag "L'animé a t'il été licencié en France ?" %>
        <%= f.check_box(:isLicenced) %>
    </div>

    <div class="">
        <%= label_tag "Licencié par" %>
        <%= f.select :licencer_id, options_from_collection_for_select(Licencer.all, :id, :nom, @selRef.licencer_id), include_blank: "Aucun" %>
        <%= link_to "Ajouter un propriétaire de licence", "/licencers/new", target: :_blank %>
    </div>

    <div class="">
        <%= label_tag "Licence" %>
        <%= f.select :licence_id, options_from_collection_for_select(Licence.all, :id, :nom, @selRef.licence_id), include_blank: "Aucun" %>
        <%= link_to "Ajouter une licence", "/licences/new", target: :_blank %>
    </div>

    <div class="">
        <%= label_tag "Rendre la référence visible ?" %>
        <%= f.check_box(:isValidated) %>
    </div>

    <%= f.submit "Enregistrer les modification" %>
</div>
<% end %>
