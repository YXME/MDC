<main>
    <article class="categories">
        <center><h4>MangaDigitalCollection est un site francophone de référencement de mangas et d'animés.</h4></center>
    </article>
    <article class="categories">
        <div>
            <h5>Nouveautés</h5>
        </div>
        <div class="images">
            <% @NewRef.each do |selRef| %>
                <div>
                    <%= link_to selRef.url do %>
                        <%= image_tag "#{selRef.cover_data}", class:"miniature" %>
                        <p><%= selRef.titre %></p>
                    <% end %>
                </div>
            <% end %>
        </div>
    </article>
    <article class="categories">
        <h5>Sponsorisé</h5>
        <div class="images">
            <% @SponsoRef.each do |selRef| %>
                <div>
                    <%= link_to selRef.url do %>
                        <%= image_tag "#{selRef.cover_data}", class:"miniature" %>
                        <p><%= selRef.titre %></p>
                    <% end %>
                </div>
            <% end %>
        </div>
    </article>
    <article class="pub">
        <%= image_tag "pub.jpg", width: "101%" %>
    </article>
</main>
